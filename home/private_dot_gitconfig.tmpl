	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
	verbose = true
